#3. Matrix

M <- matrix( c( 1,2,3,8,2,9), 3, 2, TRUE)
N <- matrix( c( 5,4,8,2), 2, 2, TRUE)

#a)
M %*% N

#b)
M %*% solve(N)

#c)
M %*% t(N)

#d)
3 *( (M %*% solve(N)) +( M %*% t(N) ) )

